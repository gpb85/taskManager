<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Task Manager</title>
  </head>
  <body>
    <header><a href="/">View Admin Page</a></header>
    <main>
      <div class="box">
        <h2>Assigned Tasks</h2>
      </div>

      <% for (let employee of listEmployees) { %>
      <div class="employee-tasks">
        <h3><%= employee.name %></h3>
        <ul>
          <% employeeTasks = tasksByEmployee.filter(task => task.employee_name
          === employee.name); employeeTasks.forEach(task => { %>

          <li id="task<%= task.id %>">
            <form action="/toggle-task-status" method="post">
              <input type="hidden" name="taskId" value="<%= task.id %>" />
              <input type="checkbox" name="taskStatus" value="<%= "true" %>"
              onchange="this.form.submit()" />
            </form>

            <span><%= task.title %></span>
            <!-- Εμφανίζουμε τον τίτλο του task -->
          </li>
          <% }); %>
        </ul>
      </div>
      <% } %>
    </main>
    <footer>
      Copyright &copy <%= new Date().getFullYear() %>. All rights reserved.
    </footer>
  </body>
</html>
